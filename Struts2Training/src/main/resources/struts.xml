<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>   

	<include file="login.xml"/>

   <package name="default" namespace="/tutorials" extends="struts-default">
     
      <action name="getTraining" 
            class="com.jyp.training.action.TrainingAction" 
            method="execute">
            <result name="success">/success.jsp</result>
            <result name="error">/error.jsp</result>
      </action>

   </package>
   
   <!-- encapsulate jsp link with dummy action so that the user can see
    the action and not the jsp so that the jsp is free to change if required -->
    <package name="search" namespace="/" extends="struts-default">   
      <action name="searchForm">
            <result>/searchForm.jsp</result>
      </action>
   </package>

</struts>